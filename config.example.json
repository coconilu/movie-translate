{
  "audio": {
    "sample_rate": 16000,
    "channels": 1,
    "format": "wav",
    "quality": "high",
    "noise_reduction": true,
    "normalize": true
  },
  "cache": {
    "enabled": true,
    "max_size_gb": 10.0,
    "cleanup_days": 7,
    "path": "resources/cache",
    "temp_path": "resources/temp"
  },
  "processing": {
    "max_retries": 3,
    "timeout_seconds": 300,
    "batch_size": 100,
    "parallel_workers": 2,
    "enable_interrupt": true,
    "auto_save": true
  },
  "service": {
    "speech_recognition": "sense_voice",
    "translation": "deepseek",
    "voice_clone": "f5_tts",
    "fallback_to_local": true,
    "cost_budget_monthly": 50.0
  },
  "api": {
    "host": "localhost",
    "port": 8000,
    "debug": false,
    "cors_origins": ["*"],
    "max_file_size": 104857600,
    "timeout": 300,
    "enable_docs": true
  },
  "api_keys": {
    "baidu_speech_app_id": null,
    "baidu_speech_api_key": null,
    "baidu_speech_secret_key": null,
    "deepseek_api_key": null,
    "glm_api_key": null,
    "google_translate_api_key": null,
    "minimax_api_key": null,
    "minimax_group_id": null
  },
  "database": {
    "url": "sqlite:///movie_translate.db",
    "echo": false,
    "pool_size": 10,
    "max_overflow": 20,
    "pool_timeout": 30,
    "pool_recycle": 3600
  },
  "ui": {
    "theme": "system",
    "language": "zh-CN",
    "window_width": 1200,
    "window_height": 800,
    "auto_check_updates": true,
    "show_advanced_options": false
  },
  "debug": false,
  "log_level": "INFO"
}